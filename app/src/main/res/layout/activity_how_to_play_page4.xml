<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.joycenienkeeveline.connectfour.tudelft.ide.software.appie.HowToPlayPage">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/todo"
        android:gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/mooigrijsisnietlelijk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/mooirozeisnietlelijk" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/todo"
                android:gravity="center_horizontal"
                android:src="@drawable/appietekst" />

        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rondjegevuld"/>

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/dot1"
            android:src="@drawable/rondjewit"/>

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/dot2"
            android:src="@drawable/rondjewit"/>

        <ImageView
            android:id="@+id/dot4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/dot3"
            android:src="@drawable/rondjewit"/>

        <ImageView
            android:id="@+id/dot5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_toStartOf="@+id/dot1"
            android:src="@drawable/rondjewit"/>

        <ImageView
            android:id="@+id/dot6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_toStartOf="@+id/dot5"
            android:src="@drawable/rondjewit"/>

        <ImageView
            android:id="@+id/dot7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_toStartOf="@+id/dot6"
            android:src="@drawable/rondjewit"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/circle4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/circle4" />

        <ImageView
            android:id="@+id/balk2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/balk2" />

        <ImageView
            android:id="@+id/Pop1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/poppetjecopy" />

        <ImageView
            android:id="@+id/midgetcupcake"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/Pop1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp"
            android:src="@drawable/midgetcupcake" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/midgetcupcake"
            android:layout_toEndOf="@+id/midgetcupcake"
            android:src="@drawable/dertig" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/balk2"
            android:layout_toStartOf="@id/circle4"
            android:layout_marginTop="40dp"
            android:src="@drawable/midgetcupcake" />

        <Button
            android:id="@+id/howtoNextPage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/balk2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="21dp"
            android:onClick="howtoNextPage4"
            android:text="Next page" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

